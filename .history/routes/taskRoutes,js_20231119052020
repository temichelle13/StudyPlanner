const express = require('express');

// GET all tasks
require(`express`).Router().get('/', (req, res) => {
    // Here you will eventually interact with a database or data store
    res.send('Tasks retrieved');
});

// POST a new task
express.Router().post('/', (req, res) => {
    // Logic to add a new task
    res.send('Task added');
});

// PUT to update a task
express.Router().put(`/:id`, (req, res) => {
    // Logic to update a task based on the id
    res.send('Task updated');
});

// DELETE a task
express.Router().delete('/:id', (req, res) => {
    // Logic to delete a task based on the id
    res.send('Task deleted');
});

// Export the router
module.exports = express.Router();